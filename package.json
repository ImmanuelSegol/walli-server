{
  "name": "walli-server",
  "version": "1.0.0",
  "description": "Backend for the walli prototype",
  "main": "bin/walli",
  "scripts": {
    "compile": "cross-os precompile && tsc",
    "start": "node bin/walli",
    "dev": "npm run compile && npm run start",
    "lint": "tslint --project tsconfig.json"
  },
  "bin": {
    "walli": "./bin/walli"
  },
  "cross-os": {
    "precompile": {
      "linux": "rm -rf ./dist",
      "darwin": "rm -rf ./dist",
      "win32": "rd /q /s dist || cd ."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dopetard/walli-server.git"
  },
  "dependencies": {
    "cross-os": "^1.3.0",
    "typescript": "^2.9.2",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2"
  }
}
